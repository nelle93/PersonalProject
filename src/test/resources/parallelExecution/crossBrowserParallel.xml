<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Personal Project Tests" parallel="tests" thread-count="3">
    <test name=  "Parallel tests Edge">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="testRunner.TestNGrunner"/>
        </classes>
    </test>
    <test name=  "Parallel tests Chrome">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="testRunner.TestNGrunner"/>
        </classes>
    </test>
    <test name=  "Parallel tests Chrome headless">
        <parameter name="browser" value="headless"/>
        <classes>
            <class name="testRunner.TestNGrunner"/>
        </classes>
    </test>
</suite>